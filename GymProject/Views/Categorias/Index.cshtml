@model GymProject.Models.ViewModels.CategoriasVM

<head>
    <link href="~/css/categorias/index.css" rel="stylesheet" />
</head>

<div class="container">

<main id="main" class="main">

    <div class="dashboard">
        <h1 class="dashboard-title">Gestión de Categorías</h1>
        <button class="btn btn-outline-primary mb-4" data-toggle="modal" data-target="#exampleModal">
            <span class="material-icons">add</span> Agregar Categoría
        </button>

        <div class="category-card">
            <div class="card-body">
                <h5 class="card-title">
                    <span class="material-icons">category</span> Categorías
                </h5>

                @if (Model != null && Model.Categorias.Any())
                {
                    <table class="table datatable" id="tablaCategorias">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var categoria in Model.Categorias)
                            {
                                <tr>
                                    <td>@categoria.IdCategoria</td>
                                    <td>@categoria.Nombre</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="no-categories">No existen categorías registradas</p>
                }
            </div>
        </div>
    </div>

    <!-- Modal para agregar nueva categoría -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">
                        <span class="material-icons">add_circle</span> Agregar Nueva Categoría
                    </h5>

                </div>
                <form method="post">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label">Categoría</label>
                            <input type="text" asp-for="Nombre" class="form-control" id="txtNombre" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
</div>


<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
